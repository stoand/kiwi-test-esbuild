{
  "name": "kiwi-test-esbuild",
  "version": "0.0.1",
  "description": "JS Realtime Inline Test Runner for Kakoune",
  "main": "dist/esbuild_plugin.js",
  "directories": {
    "example": "examples"
  },
  "scripts": {
    "test": "tsx watch src/tests.ts",
    "test-once": "tsx src/tests.ts",
    "test-kakoune": "tsx watch src/kakoune_interface_tests.ts",
    "build": "node plugin.esbuild.mjs",
    "example-minimal-custom-esbuild": "(cd ~/esbuild && make esbuild) && cp ~/esbuild/esbuild examples/minimal/node_modules/.bin/",
    "example-minimal": "npm run example-minimal-custom-esbuild && nodemon -e mjs,ts,tsx -x 'npm run build && (cd examples/minimal/ && npm run kiwi)'"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/stoand/kiwi-test-esbuild.git"
  },
  "keywords": [
    "kak",
    "kakoune",
    "kakoune-plugin",
    "plugin",
    "kiwi",
    "esbuild",
    "javascript",
    "inline",
    "test",
    "runner"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/stoand/kiwi-test-esbuild/issues"
  },
  "homepage": "https://github.com/stoand/kiwi-test-esbuild#readme",
  "dependencies": {
    "@types/node": "^18.14.2",
    "tsx": "^3.12.3"
  }
}
